
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /campaigns/{campaignId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid == resource.data.user_id;
    }

    match /campaigns/{campaignId}/leads/{leadId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/campaigns/$(campaignId)).data.user_id == request.auth.uid;
    }
  }
}
